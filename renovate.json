{
  "extends": [
    "config:base",
    "group:allNonMajor"
  ],
  "ignorePresets": [":ignoreModulesAndTests"],
  "lockFileMaintenance": { "enabled": true },
  "regexManagers": [
    {
      "fileMatch": ["scripts/swap-vue.js"],
      "matchStrings": [
        "'(?<depName>\\S*)': '(?:npm:\\S+@)?(?<currentValue>\\S*)'"   
      ],
      "datasourceTemplate": "npm"
    }
  ],
  "packageRules": [
    {
      "matchDepTypes": ["dependencies"],
      "rangeStrategy": "replace"
    },
    {
      "matchDepTypes": ["devDependencies"],
      "rangeStrategy": "bump"
    },
    {
      "matchDepTypes": ["peerDependencies"],
      "rangeStrategy": "widen"
    },
    {
      "matchPaths": ["+(examples/**/package.json)"],
      "rangeStrategy": "bump"
    },
    {
      "matchPackageNames": ["ts-jest", "jest"],
      "groupName": "jest monorepo"
    },
    {
      "matchPackageNames": ["@parcel/transformer-vue", "parcel"],
      "allowedVersions": "!/nightly/"
    }
  ]
}
